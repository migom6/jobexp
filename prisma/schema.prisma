generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  username String  @unique
  password String
  profile Profile?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  user   User @relation(fields: [username], references: [username])
  username String  @unique 
  profileImageUrl String @default("")
  about String @default("")
  personalDetails String  @default("{\"name\":\"\",\"email\":\"\",\"dob\":\"\",\"website\":\"\"}")
  jobExperiences JobExperience[]
  aboutIsPublic Boolean @default(true)
  personalDetailsIsPublic Boolean @default(true)
  jobExperiencesIsPublic Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JobExperience {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile Profile @relation(fields: [username], references: [username])
  username String
  companyName String
  companyImageUrl String
  jobTitle String
  description String
  startDate DateTime
  endDate DateTime
}